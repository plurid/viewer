{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ES6",
        "lib": ["ES6", "DOM", "DOM.Iterable", "ES2016", "ES2017"],
        "jsx": "react",

        "baseUrl": ".",
        "paths": {
            "~source/*": [
                "./source/*"
            ],
            "~renderer-data/*": [
                "./source/renderer/modules/data/*"
            ],
            "~renderer-components/*": [
                "./source/renderer/modules/components/*"
            ],
            "~renderer-containers/*": [
                "./source/renderer/modules/containers/*"
            ],
            "~renderer-planes/*": [
                "./source/renderer/modules/planes/*"
            ],
            "~renderer-services/*": [
                "./source/renderer/modules/services/*"
            ],
        },

        "outDir": "build",
        "typeRoots": [
            "node_modules/@types",
            "source/types/typings.d.ts"
        ],

        "declaration": false,
        "sourceMap": true,
        "allowJs": false,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "suppressImplicitAnyIndexErrors": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "isolatedModules": true,

        "strict": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "source"
    ],
    "exclude": [
        "node_modules",
        "build",
        "unsource",
        "previousSource"
    ]
}
