{
    "name": "viewer",
    "version": "0.0.0-0",
    "description": "Enhanced Image, Video, Sound, and Text Viewer Application",
    "keywords": [
        "viewer",
        "enhanced image",
        "enhanced video",
        "enhanced sound",
        "enhanced text"
    ],
    "author": "ly3xqhl8g9 <ly3xqhl8g9@plurid.com> (https://plurid.com)",
    "license": "SEE LICENSE IN LICENSE",
    "repository": {
        "type": "git",
        "url": "https://github.com/plurid/viewer"
    },
    "bugs": {
        "email": "source@plurid.com",
        "url": "https://github.com/plurid/viewer/issues"
    },
    "homepage": "https://plurid.com/viewer",
    "publishConfig": {
        "access": "restricted"
    },
    "engines": {
        "node": ">=12",
        "npm": ">=6"
    },
    "build": {
        "extends": null,
        "productName": "viewer",
        "appId": "com.plurid.viewer",
        "files": [
            "node_modules/**/*",
            "build/**/*",
            "package.json"
        ],
        "mac": {
            "target": [
                "dmg"
            ],
            "type": "distribution",
            "hardenedRuntime": true,
            "entitlements": "assets/entitlements.mac.plist",
            "entitlementsInherit": "assets/entitlements.mac.plist",
            "gatekeeperAssess": false
        },
        "dmg": {
            "title": "${productName}",
            "backgroundColor": "#3c4049",
            "contents": [
                {
                    "x": 130,
                    "y": 180
                },
                {
                    "x": 410,
                    "y": 180,
                    "type": "link",
                    "path": "/Applications"
                }
            ],
            "window": {
                "width": 530,
                "height": 400
            }
        },
        "win": {
            "target": [
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "artifactName": "${productName} ${version}.${ext}",
            "allowToChangeInstallationDirectory": true
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "./assets/512x512.png",
            "category": "Utility"
        },
        "directories": {
            "buildResources": "./assets/",
            "output": "./release/"
        },
        "extraResources": [
            "./assets/**/*"
        ],
        "extraMetadata": {
            "main": "./build/index.js"
        },
        "fileAssociations": [
            {
                "ext": "bmp",
                "name": "Bmp File",
                "role": "Editor"
            },
            {
                "ext": "gif",
                "name": "Gif File",
                "role": "Editor"
            },
            {
                "ext": "ico",
                "name": "Ico File",
                "role": "Editor"
            },
            {
                "ext": "jpeg",
                "name": "Jpeg File",
                "role": "Editor"
            },
            {
                "ext": "jpg",
                "name": "Jpeg File",
                "role": "Editor"
            },
            {
                "ext": "png",
                "name": "Png File",
                "role": "Editor"
            },
            {
                "ext": "svg",
                "name": "Svg File",
                "role": "Editor"
            },
            {
                "ext": "tif",
                "name": "Tiff File",
                "role": "Editor"
            },
            {
                "ext": "tiff",
                "name": "Tiff File",
                "role": "Editor"
            },
            {
                "ext": "webp",
                "name": "Webp File",
                "role": "Editor"
            },
            {
                "ext": "eimg",
                "name": "Enhaced Image File",
                "role": "Editor"
            }
        ]
    },
    "scripts": {
        "clean": "rm -rf ./build && rm -rf ./release",
        "test": "jest",
        "develop": "yarn clean && webpack --config ./scripts/webpack.config.js",
        "build": "yarn clean && webpack --config ./scripts/webpack.config.js --env prod --progress",
        "build.clean": "rm -rf `find ./build/ -type d -name __tests__` && rm -rf `find ./build/ -type d -name .DS_STORE`",
        "builder": "electron-builder build --publish never",
        "electron": "electron ./build/",
        "electron.run": "yarn develop && yarn electron",
        "package": "yarn build && yarn builder",
        "package.clean": "yarn build && yarn build.clean && yarn builder"
    },
    "dependencies": {
        "@apollo/client": "^3.3.6",
        "@plurid/detoolbar-react": "^0.0.0-0",
        "@plurid/enhanced-image-in-out": "^0.0.0-0",
        "@plurid/enhanced-image-react": "^0.0.0-0",
        "@plurid/enhanced-video-react": "^0.0.0-0",
        "@plurid/plurid-data": "^0.0.0-0",
        "@plurid/plurid-engine": "^0.0.0-0",
        "@plurid/plurid-functions": "^0.0.0-0",
        "@plurid/plurid-functions-react": "^0.0.0-0",
        "@plurid/plurid-icons-react": "^0.0.0-0",
        "@plurid/plurid-pubsub": "^0.0.0-0",
        "@plurid/plurid-react": "^0.0.0-0",
        "@plurid/plurid-themes": "^0.0.0-0",
        "@plurid/plurid-ui-components-react": "^0.0.0-0",
        "@plurid/plurid-ui-state-react": "^0.0.0-0",
        "cross-fetch": "^3.0.6",
        "draft-js": "^0.11.7",
        "electron-context-menu": "^2.3.1",
        "epubjs": "^0.3.88",
        "graphql": "^15.4.0",
        "graphql-tag": "^2.11.0",
        "hammerjs": "^2.0.8",
        "nedb": "^1.8.0",
        "pdfjs-dist": "^2.5.207",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-pdf": "^5.1.0",
        "react-redux": "^7.2.2",
        "redux": "^4.0.5",
        "redux-devtools-extension": "^2.13.8",
        "redux-thunk": "^2.3.0",
        "styled-components": "^5.2.1",
        "utif": "^3.1.0"
    },
    "devDependencies": {
        "@types/jest": "^26.0.19",
        "@types/nedb": "^1.8.11",
        "@types/pdfjs-dist": "^2.1.7",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/react-pdf": "^5.0.0",
        "@types/react-redux": "^7.1.14",
        "@types/styled-components": "^5.1.7",
        "@types/utif": "^3.0.1",
        "copy-webpack-plugin": "^7.0.0",
        "css-loader": "^5.0.1",
        "electron": "^11.1.1",
        "electron-builder": "^22.9.1",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^4.5.0",
        "jest": "^26.6.3",
        "style-loader": "^2.0.0",
        "ts-jest": "^26.4.4",
        "ts-loader": "^8.0.12",
        "ts-node": "^9.1.1",
        "tsconfig-paths-webpack-plugin": "^3.3.0",
        "typescript": "^4.1.3",
        "webpack": "^5.11.0",
        "webpack-cli": "^4.2.0"
    }
}
