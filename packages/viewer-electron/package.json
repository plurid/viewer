{
    "name": "viewer",
    "version": "0.0.0-0",
    "description": "Enhanced Image, Video, Sound, and Text Viewer Application",
    "keywords": [
        "viewer",
        "enhanced image",
        "enhanced video",
        "enhanced sound",
        "enhanced text"
    ],
    "author": "ly3xqhl8g9 <ly3xqhl8g9@plurid.com> (https://plurid.com)",
    "license": "SEE LICENSE IN LICENSE",
    "repository": {
        "type": "git",
        "url": "https://github.com/plurid/viewer"
    },
    "bugs": {
        "email": "source@plurid.com",
        "url": "https://github.com/plurid/viewer/issues"
    },
    "homepage": "https://plurid.com/viewer",
    "publishConfig": {
        "access": "restricted"
    },
    "engines": {
        "node": ">=12",
        "npm": ">=6"
    },
    "build": {
        "extends": null,
        "productName": "viewer",
        "appId": "com.plurid.viewer",
        "files": [
            "node_modules/**/*",
            "build/**/*",
            "package.json"
        ],
        "mac": {
            "target": [
                "dmg"
            ],
            "type": "distribution",
            "hardenedRuntime": true,
            "entitlements": "assets/entitlements.mac.plist",
            "entitlementsInherit": "assets/entitlements.mac.plist",
            "gatekeeperAssess": false
        },
        "dmg": {
            "title": "${productName}",
            "backgroundColor": "#3c4049",
            "contents": [
                {
                    "x": 130,
                    "y": 180
                },
                {
                    "x": 410,
                    "y": 180,
                    "type": "link",
                    "path": "/Applications"
                }
            ],
            "window": {
                "width": 530,
                "height": 400
            }
        },
        "win": {
            "target": [
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "artifactName": "${productName} ${version}.${ext}",
            "allowToChangeInstallationDirectory": true
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "./assets/512x512.png",
            "category": "Utility"
        },
        "directories": {
            "buildResources": "./assets/",
            "output": "./release/"
        },
        "extraResources": [
            "./assets/**/*"
        ],
        "extraMetadata": {
            "main": "./build/index.js"
        },
        "fileAssociations": [
            {
                "ext": "pdf",
                "name": "PDF File",
                "role": "Editor"
            },
            {
                "ext": "pluridoc",
                "name": "Pluridoc File",
                "role": "Editor"
            },
            {
                "ext": "bmp",
                "name": "Bmp File",
                "role": "Editor"
            },
            {
                "ext": "gif",
                "name": "Gif File",
                "role": "Editor"
            },
            {
                "ext": "ico",
                "name": "Ico File",
                "role": "Editor"
            },
            {
                "ext": "jpeg",
                "name": "Jpeg File",
                "role": "Editor"
            },
            {
                "ext": "jpg",
                "name": "Jpeg File",
                "role": "Editor"
            },
            {
                "ext": "png",
                "name": "Png File",
                "role": "Editor"
            },
            {
                "ext": "svg",
                "name": "Svg File",
                "role": "Editor"
            },
            {
                "ext": "tif",
                "name": "Tiff File",
                "role": "Editor"
            },
            {
                "ext": "tiff",
                "name": "Tiff File",
                "role": "Editor"
            },
            {
                "ext": "webp",
                "name": "Webp File",
                "role": "Editor"
            },
            {
                "ext": "eimg",
                "name": "Enhaced Image File",
                "role": "Editor"
            },
            {
                "ext": "mp4",
                "name": "mp4 File",
                "role": "Editor"
            },
            {
                "ext": "mkv",
                "name": "mkv File",
                "role": "Editor"
            },
            {
                "ext": "mov",
                "name": "mov File",
                "role": "Editor"
            }
        ]
    },
    "scripts": {
        "clean": "rm -rf ./build && rm -rf ./release",
        "test": "jest",
        "develop": "pnpm clean && webpack --config ./scripts/webpack.config.js",
        "build": "pnpm clean && webpack --config ./scripts/webpack.config.js --env prod --progress",
        "build.clean": "rm -rf `find ./build/ -type d -name __tests__` && rm -rf `find ./build/ -type d -name .DS_STORE`",
        "build.production": "NODE_ENV=production pnpm build && pnpm build.clean",
        "electron.run": "electron ./build/",
        "electron.develop": "pnpm develop && pnpm electron.run",
        "electron.builder": "electron-builder build --publish never",
        "package": "pnpm build.production && pnpm electron.builder"
    },
    "dependencies": {
        "@apollo/client": "^3.6.9",
        "@electron/remote": "^2.0.8",
        "@plurid/detoolbar-react": "^0.0.0-0",
        "@plurid/elementql": "^0.0.0-1",
        "@plurid/elementql-client-react": "^0.0.0-1",
        "@plurid/enhanced-image-in-out": "^0.0.0-0",
        "@plurid/enhanced-image-react": "^0.0.0-0",
        "@plurid/enhanced-video-react": "^0.0.0-1",
        "@plurid/plurid-data": "^0.0.0-16",
        "@plurid/plurid-engine": "^0.0.0-15",
        "@plurid/plurid-functions": "^0.0.0-30",
        "@plurid/plurid-functions-react": "^0.0.0-5",
        "@plurid/plurid-icons-react": "^0.0.0-5",
        "@plurid/plurid-pubsub": "^0.0.0-7",
        "@plurid/plurid-react": "^0.0.0-24",
        "@plurid/plurid-themes": "^0.0.0-2",
        "@plurid/plurid-ui-components-react": "^0.0.0-15",
        "@plurid/plurid-ui-state-react": "^0.0.0-7",
        "@reduxjs/toolkit": "^1.8.4",
        "chokidar": "^3.5.3",
        "cross-fetch": "^3.1.5",
        "draft-js": "^0.11.7",
        "electron-context-menu": "^3.4.0",
        "epubjs": "^0.3.93",
        "express": "^4.18.1",
        "graphql": "^16.6.0",
        "graphql-tag": "^2.12.6",
        "hammerjs": "^2.0.8",
        "mime-types": "^2.1.35",
        "nedb": "^1.8.0",
        "pdfjs-dist": "^2.15.349",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-pdf": "^5.7.2",
        "react-redux": "^8.0.2",
        "styled-components": "^5.3.5",
        "utif": "^3.1.0",
        "v8-compile-cache": "^2.3.0",
        "worker-loader": "^3.0.8"
    },
    "devDependencies": {
        "@redux-devtools/extension": "^3.2.3",
        "@types/express": "^4.17.13",
        "@types/jest": "^28.1.7",
        "@types/mime-types": "^2.1.1",
        "@types/nedb": "^1.8.12",
        "@types/node": "^18.7.6",
        "@types/react": "^18.0.17",
        "@types/react-dom": "^18.0.6",
        "@types/react-pdf": "^5.7.2",
        "@types/react-redux": "^7.1.24",
        "@types/styled-components": "^5.1.26",
        "@types/utif": "^3.0.1",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.7.1",
        "electron": "^20.0.3",
        "electron-builder": "^23.3.3",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.5.0",
        "jest": "^28.1.3",
        "node-loader": "^2.0.0",
        "style-loader": "^3.3.1",
        "ts-jest": "^28.0.8",
        "ts-loader": "^9.3.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths-webpack-plugin": "^4.0.0",
        "typescript": "^4.7.4",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0"
    }
}
