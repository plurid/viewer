{
    "name": "@plurid/viewer",
    "version": "0.0.0-0",
    "description": "Enhanced Image, Video, and Text Viewer Application",
    "keywords": [
        "viewer",
        "enhanced image",
        "enhanced video"
    ],
    "author": "ly3xqhl8g9 <ly3xqhl8g9@plurid.com> (https://plurid.com)",
    "license": "SEE LICENSE IN LICENSE",
    "repository": {
        "type": "git",
        "url": "https://github.com/plurid/viewer"
    },
    "bugs": {
        "email": "source@plurid.com",
        "url": "https://github.com/plurid/viewer/issues"
    },
    "homepage": "https://github.com/plurid/viewer/blob/master/packages/viewer-electron/README.md",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    },
    "engines": {
        "node": ">=12",
        "npm": ">=6"
    },
    "main": "distribution/index.js",
    "module": "distribution/index.es.js",
    "typings": "distribution/index.d.ts",
    "files": [
        "distribution"
    ],
    "scripts": {
        "clean": "rm -rf ./build",
        "test": "jest",
        "watch": "yarn clean && webpack --watch --config ./scripts/webpack.config.js --env dev",
        "develop": "yarn clean && webpack --config ./scripts/webpack.config.js",
        "build": "yarn clean && webpack --config ./scripts/webpack.config.js --env prod --progress",
        "electron": "electron ./build/",
        "electron.run": "yarn develop && yarn electron",
        "electron.linux": "yarn build && electron-packager ./build/ viewer --overwrite --asar=true --platform=linux --arch=x64 --icon=./build/assets/meta/viewer.png --prune=true --out=viewer",
        "electron.mac": "yarn build && electron-packager ./build/ --overwrite --platform=darwin --arch=x64 --icon=./build/assets/meta/viewer.icns --prune=true --out=viewer",
        "electron.windows": "yarn build && electron-packager ./build/ viewer --overwrite --asar=true --platform=win32 --arch=ia32 --icon=./build/assets/meta/viewer.ico --prune=true --out=viewer --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"viewer\""
    },
    "dependencies": {
        "@apollo/client": "^3.3.6",
        "@plurid/detoolbar-react": "^0.0.0-0",
        "@plurid/enhanced-image-react": "^0.0.0-0",
        "@plurid/enhanced-video-react": "^0.0.0-0",
        "@plurid/plurid-data": "^0.0.0-0",
        "@plurid/plurid-engine": "^0.0.0-0",
        "@plurid/plurid-functions": "^0.0.0-0",
        "@plurid/plurid-functions-react": "^0.0.0-0",
        "@plurid/plurid-icons-react": "^0.0.0-0",
        "@plurid/plurid-pubsub": "^0.0.0-0",
        "@plurid/plurid-react": "^0.0.0-0",
        "@plurid/plurid-themes": "^0.0.0-0",
        "@plurid/plurid-ui-components-react": "^0.0.0-0",
        "@plurid/plurid-ui-state-react": "^0.0.0-0",
        "cross-fetch": "^3.0.6",
        "draft-js": "^0.11.7",
        "graphql": "^15.4.0",
        "graphql-tag": "^2.11.0",
        "hammerjs": "^2.0.8",
        "nedb": "^1.8.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-redux": "^7.2.2",
        "redux": "^4.0.5",
        "redux-devtools-extension": "^2.13.8",
        "redux-thunk": "^2.3.0",
        "styled-components": "^5.2.1"
    },
    "devDependencies": {
        "@types/jest": "^26.0.16",
        "@types/nedb": "^1.8.11",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/react-redux": "^7.1.11",
        "@types/styled-components": "^5.1.4",
        "copy-webpack-plugin": "^6.3.2",
        "electron": "^11.0.3",
        "electron-builder": "^22.9.1",
        "electron-installer-debian": "^3.1.0",
        "electron-packager": "^15.1.0",
        "html-webpack-plugin": "^4.5.0",
        "jest": "^26.6.3",
        "ts-jest": "^26.4.4",
        "ts-loader": "^8.0.11",
        "ts-node": "^9.0.0",
        "tsconfig-paths-webpack-plugin": "^3.3.0",
        "typescript": "^4.1.2",
        "webpack": "^5.9.0",
        "webpack-cli": "^4.2.0"
    }
}
