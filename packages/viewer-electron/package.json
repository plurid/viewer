{
    "name": "viewer",
    "version": "0.0.0-0",
    "description": "Enhanced Image, Video, Sound, and Text Viewer Application",
    "keywords": [
        "viewer",
        "enhanced image",
        "enhanced video",
        "enhanced sound",
        "enhanced text"
    ],
    "author": "ly3xqhl8g9 <ly3xqhl8g9@plurid.com> (https://plurid.com)",
    "license": "SEE LICENSE IN LICENSE",
    "repository": {
        "type": "git",
        "url": "https://github.com/plurid/viewer"
    },
    "bugs": {
        "email": "source@plurid.com",
        "url": "https://github.com/plurid/viewer/issues"
    },
    "homepage": "https://plurid.com/viewer",
    "publishConfig": {
        "access": "restricted"
    },
    "engines": {
        "node": ">=12",
        "npm": ">=6"
    },
    "build": {
        "extends": null,
        "productName": "viewer",
        "appId": "com.plurid.viewer",
        "files": [
            "node_modules/**/*",
            "build/**/*",
            "package.json"
        ],
        "mac": {
            "target": [
                "dmg"
            ],
            "type": "distribution",
            "hardenedRuntime": true,
            "entitlements": "assets/entitlements.mac.plist",
            "entitlementsInherit": "assets/entitlements.mac.plist",
            "gatekeeperAssess": false
        },
        "dmg": {
            "title": "${productName}",
            "backgroundColor": "#3c4049",
            "contents": [
                {
                    "x": 130,
                    "y": 180
                },
                {
                    "x": 410,
                    "y": 180,
                    "type": "link",
                    "path": "/Applications"
                }
            ],
            "window": {
                "width": 530,
                "height": 400
            }
        },
        "win": {
            "target": [
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "artifactName": "${productName} ${version}.${ext}",
            "allowToChangeInstallationDirectory": true
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "./assets/512x512.png",
            "category": "Utility"
        },
        "directories": {
            "buildResources": "./assets/",
            "output": "./release/"
        },
        "extraResources": [
            "./assets/**/*"
        ],
        "extraMetadata": {
            "main": "./build/index.js"
        },
        "fileAssociations": [
            {
                "ext": "bmp",
                "name": "Bmp File",
                "role": "Editor"
            },
            {
                "ext": "gif",
                "name": "Gif File",
                "role": "Editor"
            },
            {
                "ext": "ico",
                "name": "Ico File",
                "role": "Editor"
            },
            {
                "ext": "jpeg",
                "name": "Jpeg File",
                "role": "Editor"
            },
            {
                "ext": "jpg",
                "name": "Jpeg File",
                "role": "Editor"
            },
            {
                "ext": "png",
                "name": "Png File",
                "role": "Editor"
            },
            {
                "ext": "svg",
                "name": "Svg File",
                "role": "Editor"
            },
            {
                "ext": "tif",
                "name": "Tiff File",
                "role": "Editor"
            },
            {
                "ext": "tiff",
                "name": "Tiff File",
                "role": "Editor"
            },
            {
                "ext": "webp",
                "name": "Webp File",
                "role": "Editor"
            },
            {
                "ext": "eimg",
                "name": "Enhaced Image File",
                "role": "Editor"
            },
            {
                "ext": "mp4",
                "name": "mp4 File",
                "role": "Editor"
            },
            {
                "ext": "mkv",
                "name": "mkv File",
                "role": "Editor"
            },
            {
                "ext": "mov",
                "name": "mov File",
                "role": "Editor"
            }
        ]
    },
    "scripts": {
        "clean": "rm -rf ./build && rm -rf ./release",
        "test": "jest",
        "develop": "yarn clean && webpack --config ./scripts/webpack.config.js",
        "build": "yarn clean && webpack --config ./scripts/webpack.config.js --env prod --progress",
        "build.clean": "rm -rf `find ./build/ -type d -name __tests__` && rm -rf `find ./build/ -type d -name .DS_STORE`",
        "builder": "electron-builder build --publish never",
        "electron": "electron ./build/",
        "electron.run": "yarn develop && yarn electron",
        "package": "yarn build && yarn builder",
        "package.clean": "yarn build && yarn build.clean && yarn builder"
    },
    "dependencies": {
        "@apollo/client": "^3.3.20",
        "@plurid/detoolbar-react": "^0.0.0-0",
        "@plurid/elementql": "^0.0.0-1",
        "@plurid/elementql-client-react": "^0.0.0-1",
        "@plurid/enhanced-image-in-out": "^0.0.0-0",
        "@plurid/enhanced-image-react": "^0.0.0-0",
        "@plurid/enhanced-video-react": "^0.0.0-0",
        "@plurid/plurid-data": "^0.0.0-5",
        "@plurid/plurid-engine": "^0.0.0-4",
        "@plurid/plurid-functions": "^0.0.0-5",
        "@plurid/plurid-functions-react": "^0.0.0-1",
        "@plurid/plurid-icons-react": "^0.0.0-0",
        "@plurid/plurid-pubsub": "^0.0.0-5",
        "@plurid/plurid-react": "^0.0.0-5",
        "@plurid/plurid-themes": "^0.0.0-0",
        "@plurid/plurid-ui-components-react": "^0.0.0-2",
        "@plurid/plurid-ui-state-react": "^0.0.0-0",
        "cross-fetch": "^3.1.4",
        "draft-js": "^0.11.7",
        "electron-context-menu": "^3.1.1",
        "epubjs": "^0.3.88",
        "graphql": "^15.5.1",
        "graphql-tag": "^2.12.5",
        "hammerjs": "^2.0.8",
        "nedb": "^1.8.0",
        "pdfjs-dist": "^2.8.335",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-pdf": "^5.3.0",
        "react-redux": "^7.2.4",
        "redux": "^4.1.0",
        "redux-devtools-extension": "^2.13.9",
        "redux-thunk": "^2.3.0",
        "styled-components": "^5.3.0",
        "utif": "^3.1.0"
    },
    "devDependencies": {
        "@types/jest": "^26.0.23",
        "@types/nedb": "^1.8.11",
        "@types/pdfjs-dist": "^2.7.3",
        "@types/react": "^17.0.13",
        "@types/react-dom": "^17.0.8",
        "@types/react-pdf": "^5.0.4",
        "@types/react-redux": "^7.1.16",
        "@types/styled-components": "^5.1.10",
        "@types/utif": "^3.0.1",
        "copy-webpack-plugin": "^9.0.1",
        "css-loader": "^5.2.6",
        "electron": "^13.1.4",
        "electron-builder": "^22.11.7",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.3.2",
        "jest": "^27.0.6",
        "style-loader": "^3.0.0",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths-webpack-plugin": "^3.5.1",
        "typescript": "^4.3.5",
        "webpack": "^5.41.1",
        "webpack-cli": "^4.7.2"
    }
}
